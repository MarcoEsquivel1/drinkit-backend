{
  "name": "dinkit-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "echo \"Build completed successfully\"",
    "build:restart": "yarn build && yarn pm2:restart",
    "build:restart:logs": "yarn build && yarn pm2:restart && yarn pm2:logs",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build -d",
    "docker:test": "docker compose -f docker-compose.test.yml up --build -d",
    "docker:prod": "docker compose up -d -V",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:test:down": "docker compose -f docker-compose.test.yml down",
    "docker:prod:down": "docker compose down",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:test:logs": "docker compose -f docker-compose.test.yml logs -f",
    "docker:prod:logs": "docker compose logs -f",
    "pm2": "dotenv -e .env -- ./scripts/start-server.sh",
    "pm2:logs": "pm2 logs dinkit_api",
    "pm2:restart": "pm2 reload dinkit_api --update-env",
    "pm2:restart:logs": "yarn pm2:restart; yarn pm2:logs",
    "pm2:stop": "pm2 stop dinkit_api",
    "pm2:delete": "pm2 delete dinkit_api",
    "start:pm2": "pm2 start dist/main.js -i max --name dinkit_api",
    "lint": "eslint \"{src,test}/**/*.ts\" --color --max-warnings=0",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "lint:ts": "tsc --project tsconfig.json --noEmit",
    "test": "dotenv -e .env.test -- jest --runInBand --detectOpenHandles",
    "test:watch": "dotenv -e .env.test -- jest --watch",
    "test:cov": "dotenv -e .env.test -- jest --coverage --runInBand",
    "test:debug": "dotenv -e .env.test -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.test -- jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:drop": "typeorm-ts-node-commonjs schema:drop -d ./src/shared/infrastructure/config/typeorm.config.ts",
    "typeorm:drop:test": "dotenv -e .env.test -- typeorm-ts-node-commonjs schema:drop -d ./src/shared/infrastructure/config/typeorm.config.ts",
    "migrations": "typeorm-ts-node-commonjs migration:run -d ./src/shared/infrastructure/config/typeorm.config.ts",
    "migrations:create": "typeorm-ts-node-commonjs migration:create ./src/shared/infrastructure/database/migrations/NewMigration",
    "migrations:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/shared/infrastructure/config/typeorm.config.ts",
    "migrations:generate": "typeorm-ts-node-commonjs migration:generate -d ./src/shared/infrastructure/config/typeorm.config.ts ./src/shared/infrastructure/database/migrations/NewMigration",
    "migrations:test:revert": "dotenv -e .env.test -- typeorm-ts-node-commonjs migration:revert -d ./src/shared/infrastructure/config/typeorm.config.ts",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync",
    "seeds": "ts-node -r tsconfig-paths/register ./src/shared/infrastructure/database/seeds/run-seeders.ts",
    "setup": "yarn install && yarn docker:dev && yarn wait-services && yarn migrations:dev && yarn seeds:dev",
    "setup:clean": "yarn docker:dev:down && yarn docker:dev && yarn wait-services && yarn migrations:dev && yarn seeds:dev",
    "wait-services": "node -e \"console.log('Esperando servicios...'); const start = Date.now(); while(Date.now() - start < 20000) {} console.log('Servicios listos');\"",
    "migrations:dev": "docker exec dinkit_api_dev yarn migrations",
    "migrations:test": "docker exec dinkit_api_test yarn migrations",
    "migrations:prod": "docker exec dinkit_api_prod yarn migrations",
    "seeds:dev": "docker exec dinkit_api_dev yarn seeds",
    "seeds:test": "docker exec dinkit_api_test yarn seeds",
    "seeds:prod": "docker exec dinkit_api_prod yarn seeds",
    "migrations:generate:dev": "docker exec dinkit_api_dev yarn migrations:generate",
    "migrations:create:dev": "docker exec dinkit_api_dev yarn migrations:create",
    "migrations:revert:dev": "docker exec dinkit_api_dev yarn migrations:revert",
    "migrations:generate:test": "docker exec dinkit_api_test yarn migrations:generate",
    "migrations:create:test": "docker exec dinkit_api_test yarn migrations:create",
    "dev": "yarn start:dev",
    "db:reset": "yarn typeorm:drop && yarn migrations && yarn seeds",
    "db:reset:dev": "docker exec dinkit_api_dev yarn typeorm:drop && yarn migrations:dev && yarn seeds:dev",
    "db:reset:test": "docker exec dinkit_api_test yarn typeorm:drop && yarn migrations:test && yarn seeds:test",
    "db:reset:prod": "docker exec dinkit_api_prod yarn typeorm:drop && yarn migrations:prod && yarn seeds:prod",
    "services:dev": "yarn docker:dev",
    "services:test": "yarn docker:test",
    "services:prod": "yarn docker:prod",
    "services:dev:down": "yarn docker:dev:down",
    "services:test:down": "yarn docker:test:down",
    "services:prod:down": "yarn docker:prod:down",
    "services:dev:stop": "docker compose -f docker-compose.dev.yml stop",
    "services:test:stop": "docker compose -f docker-compose.test.yml stop",
    "services:prod:stop": "docker compose stop",
    "services:dev:start": "docker compose -f docker-compose.dev.yml start",
    "services:test:start": "docker compose -f docker-compose.test.yml start",
    "services:prod:start": "docker compose start",
    "services:dev:restart": "docker compose -f docker-compose.dev.yml restart",
    "services:test:restart": "docker compose -f docker-compose.test.yml restart",
    "services:prod:restart": "docker compose restart",
    "services:dev:logs": "yarn docker:dev:logs",
    "services:test:logs": "yarn docker:test:logs",
    "services:prod:logs": "yarn docker:prod:logs"
  },
