# Variables de entorno para ejecutar migraciones desde Windows
# Copia de .env pero con hosts localhost para acceso desde Windows

NODE_ENV=development
PORT=3000

# Base de datos PostgreSQL - localhost para Windows
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USERNAME=dinkit_user
POSTGRES_PASSWORD=drinkitpass
POSTGRES_NAME=dinkit_dev_db
POSTGRES_SCHEMA=public
POSTGRES_USE_SSL=false

# Variables DB_ para database.config.ts
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=dinkit_user
DB_PASSWORD=drinkitpass
DB_NAME=dinkit_dev_db

# MongoDB - localhost para Windows
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USERNAME=dinkit_audit_user
MONGO_PASSWORD=drinkitpass
MONGO_DATABASE=dinkit_audit

# Redis - localhost para Windows
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=drinkitpass
REDIS_DATABASES=0

# JWT
JWT_SECRET=dinkitjwt 